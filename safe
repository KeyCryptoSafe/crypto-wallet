<div>
  <style>
    .card {
      border: 1px solid #ccc;
      border-radius: 5px;<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Crypto Wallet Generator</title>
  <style>
    body {
      background-color: #000;
      color: #fff;
    }

    .card {
      border: 1px solid #ccc;
      border-radius: 5px;
      padding: 10px;
      margin-bottom: 10px;
    }
  </style>
</head>

<body>
  <div id="walletsContainer"></div>

  <script>
    function generateBitcoinWallet() {
      var keyPair = bitcoin.ECPair.makeRandom();
      var { address } = bitcoin.payments.p2pkh({ pubkey: keyPair.publicKey });

      return { address, privateKey: keyPair.toWIF() };
    }

    function generateEthereumWallet() {
      var wallet = ethers.Wallet.createRandom();
      var address = wallet.address;
      var privateKey = wallet.privateKey;

      return { address, privateKey };
    }

    function generateWallet(coin) {
      var wallet;

      if (coin === "BTC") {
        wallet = generateBitcoinWallet();
      } else if (coin === "ETH") {
        wallet = generateEthereumWallet();
      }

      if (wallet) {
        var { address, privateKey } = wallet;

        var cardContent = `
          <h3>${coin} Wallet</h3>
          <p><strong>Address:</strong> ${address}</p>
          <p><strong>Private Key:</strong> ${privateKey}</p>
        `;

        var card = document.createElement("div");
        card.className = "card";
        card.innerHTML = cardContent;

        document.getElementById("walletsContainer").appendChild(card);
      }
    }

    function createWalletCards() {
      var coins = ["BTC", "ETH", "LTC", "DOGE"];
      coins.forEach(function (coin) {
        var card = document.createElement("div");
        card.className = "card";
        card.innerHTML = `<h3>${coin} Wallet</h3>
                          <button onclick="generateWallet('${coin}')">Generate Wallet</button>`;

        document.getElementById("walletsContainer").appendChild(card);
      });
    }

    function loadScript(url, callback) {
      var script = document.createElement("script");
      script.type = "text/javascript";
      script.src = url;
      script.onload = callback;
      document.body.appendChild(script);
    }

    loadScript("https://cdnjs.cloudflare.com/ajax/libs/bitcoinjs-lib/5.2.0/bitcoinjs-lib.min.js", function () {
      loadScript("https://cdn.ethers.io/lib/ethers-5.4.5.min.js", function () {
        createWalletCards();
      });
    });
  </script>
</body>

</html>
      padding: 10px;
      margin-bottom: 10px;
    }
  </style>

  <div id="walletsContainer"></div>

  <script>
    function generateBitcoinWallet() {
      var keyPair = bitcoin.ECPair.makeRandom();
      var { address } = bitcoin.payments.p2pkh({ pubkey: keyPair.publicKey });

      return { address, privateKey: keyPair.toWIF() };
    }

    function generateEthereumWallet() {
      var wallet = ethers.Wallet.createRandom();
      var address = wallet.address;
      var privateKey = wallet.privateKey;

      return { address, privateKey };
    }

    function generateWallet(coin) {
      var wallet;

      if (coin === "BTC") {
        wallet = generateBitcoinWallet();
      } else if (coin === "ETH") {
        wallet = generateEthereumWallet();
      }

      if (wallet) {
        var { address, privateKey } = wallet;

        var cardContent = `
          <h3>${coin} Wallet</h3>
          <p><strong>Address:</strong> ${address}</p>
          <p><strong>Private Key:</strong> ${privateKey}</p>
        `;

        var card = document.createElement("div");
        card.className = "card";
        card.innerHTML = cardContent;

        document.getElementById("walletsContainer").appendChild(card);
      }
    }

    function createWalletCards() {
      var coins = ["BTC", "ETH", "LTC", "DOGE"];
      coins.forEach(function(coin) {
        var card = document.createElement("div");
        card.className = "card";
        card.innerHTML = `<h3>${coin} Wallet</h3>
                          <button onclick="generateWallet('${coin}')">Generate Wallet</button>`;

        document.getElementById("walletsContainer").appendChild(card);
      });
    }

    function loadScript(url, callback) {
      var script = document.createElement("script");
      script.type = "text/javascript";
      script.src = url;
      script.onload = callback;
      document.body.appendChild(script);
    }

    loadScript("https://cdnjs.cloudflare.com/ajax/libs/bitcoinjs-lib/5.2.0/bitcoinjs-lib.min.js", function() {
      loadScript("https://cdn.ethers.io/lib/ethers-5.4.5.min.js", function() {
        createWalletCards();
      });
    });
  </script>
</div>
